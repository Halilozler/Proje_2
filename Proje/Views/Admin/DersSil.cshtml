@model Proje.Models.admin.OgrenciClass



@Html.HiddenFor(x => x.Ogrenci.Ogrenci_id)
<div class="col-md-12">
    <div>
        <label>@(Model.Ogrenci.Ogrenci_Ad + " " + Model.Ogrenci.Ogrenci_Soyad + " Aldığı Dersler: ")</label> <br />
        <ul>
            @foreach (var item in Model.List_Ders)
            {
                <li style="float:left">@item.tbl_Ders.Ders_Adı</li><br />
            }
        </ul>
    </div> <br />
    <div>
        <label>Dersini Sil:</label>
    </div>
    <div>
        @Html.DropDownListFor(x => x.A_Ders.AlınanDers_id, (List<SelectListItem>)ViewBag.AlınanDersler,
        new { @class = "form-control" })
        <br />

    </div>

</div>

@using Proje.Models
@model List<tiste>

@{
    ViewBag.Title = "Ogrenci";
    Layout = "~/Views/Shared/_Ogrenci.cshtml";
}

@if (Model.Count != 0)
{
    <table class="table table-bordered">

        <tr>
            <th width="300" height="100">
                <h3>Ders Adı</h3>
            </th>
            <th>
                
            </th>
            <th>
                <h3>Katıl</h3>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Ad
                </td>
                <td>
                    @("Başlama Saati: " + item.Zaman)
                </td>
                <td>
                    <a href="@item.link" class="btn btn-success">Katıl</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <h3>Başlayacak Dersin Yok</h3>
}

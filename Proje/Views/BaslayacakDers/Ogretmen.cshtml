@using Proje.Models.EntityFramework
@model List<tbl_OnlineDers>


@{
    ViewBag.Title = "Ogretmen";
    Layout = "~/Views/Shared/_Ogretmen.cshtml";
}

@if (Model.Count != 0)
{
    <table class="table table-bordered">

        <tr>
            <th width="300" height="100">
                <h3>Ders Adı</h3>
            </th>
            <th>
                <h3>Tarihi ve Saati</h3>
            </th>
            <th>
                <h3>Gir</h3>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.tbl_YapılacakDers.tbl_Ders.Ders_Adı
                </td>
                <td>
                    @item.tbl_YapılacakDers.Tarih_Saat
                </td>
                <td>
                    <a href="@item.tbl_YapılacakDers.Host_Link" class="btn btn-success">Dersi Başlat</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <h3>Başlayacak Ders Yok</h3>
}


